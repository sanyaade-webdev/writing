<% posts.forEach(function(post) { %>
  <article class="post">
    <header>
      <h1><a href="#posts/<%= post.get("id") %>"><%= post.get("title") %></a></h1>
      <h2>By <%= helper.byline(post.get("author")) %> on <%= helper.formatDate(post.get("published")) %>.</h2>
    </header>

    <% if (post.get("excerpt")) { %>
      <%= helper.markdown(post.get("excerpt")) %>
    <% } else { %>
      <%= helper.markdown(post.get("content")) %>
    <% } %>
  </article>
<% }); %>
